  "dist": {
    "basePath": "dist",
    "files": [
      "sustainability-apps.umd.js"
    ],
    "scripts": [
    ]
  },
  "configuration": {
    "tagName": "sustainability-apps",
    "options": [
      {
        "key": "fontColor",
        "type": "text",
        "label": "Enter the font color in hex format (e.g. #000000 for black)",
        "required": true,
        "options": {
          "default": "#000000"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used. Fallback is `en`",
        "required": true,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "showSustainabilityActionFilter",
        "type": "select",
        "label": "Show the sustainability action filter",
        "required": true,
        "options": {
          "values": [
            "true",
            "false"
          ],
          "default": "true"
        }
      },
      {
        "key": "selectedOrganisation",
        "type": "text",
        "label": "Organisation for which the data is shown (e.g. Alpenverein Südtirol)",
        "required": false
      }
    ]
  }
}
